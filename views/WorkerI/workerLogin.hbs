<div class="row">
	<div class="col-md-6 p-5" style="font-weight:bold;box-shadow:0px 2px 14px 6px rgb(96, 246, 176);margin-left:auto;margin-right:auto;border-radius:10px;">
		<h3>Worker Login</h3>
		<br/><br/>
		<form style="" class="form" onsubmit="return doLoginWorker(this);" method='POST'>
			<div class="form-group">
				<label for="workerName">Worker Name</label>
				<input type="text" name="workerName" class="form-control" id="workerName" placeholder="Worker Name">
			</div>
			<div class="form-group">
				<label for="password">Password</label>
				<input type="password" name="password" class="form-control" placeholder="Password" id="password">
			</div>
			<br/>
			<div class="form-group">
				<button type="submit" class="btn btn-success btn-block" style="font-weight: bold;">Login</button>
			</div>
		</form>
		<script>
			function doLoginWorker(form){
				$.ajax({
					url:'/worker',
					method:'POST',
					data:{workerName:form.workerName.value,password:form.password.value},
					success:function(response){
						if(response==""){
							alert('Wrong Credentials');
						}
						else{
							alert('You are Successfully logged In');
							window.location.href="/worker/"+response._id+"/dash";
						}
					}
				});
				return false;
			}
		</script>
	</div>
</div>